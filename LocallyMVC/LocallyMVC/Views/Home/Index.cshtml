@model IEnumerable<LocallyMVC.Models.SlidersTable>


@{
    ViewBag.Title = "Locally Project";
}



    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="top:50px;">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            @{ var counter = 0;}

            @foreach (var item in Model)
            {

                if (counter == 0)
                {
                    <div class="item active">
                        <img src=@Html.DisplayFor(modelItem => item.ImgSrc) alt="Los Angeles" style="width:100%;max-height: 700px;">
                        <div class="carousel-caption">
                            <h1 style="text-shadow: 5px 5px 8px black;"> @Html.DisplayFor(modelItem => item.Title)</h1>
                            <p>  @Html.DisplayFor(modelItem => item.SliderContent)</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="item">
                        <img src=@Html.DisplayFor(modelItem => item.ImgSrc) alt="Los Angeles" style="width:100%;max-height: 700px;">
                        <div class="carousel-caption">
                            <h1 style="text-shadow: 5px 5px 8px black;"> @Html.DisplayFor(modelItem => item.Title)</h1>
                            <p>  @Html.DisplayFor(modelItem => item.SliderContent)</p>
                        </div>
                    </div>
                }
                counter++;




            }



        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>





@{
    Html.RenderPartial("~/Views/LoginModals_PartialPage.cshtml");
}